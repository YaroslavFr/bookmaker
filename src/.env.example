# sstats.net API
SSTATS_API_KEY=
SSTATS_BASE=https://api.sstats.net

# Docs page auth mode: set to 'test' or 'prod'
# 'test' — публичный доступ к /docs (без авторизации)
# 'prod' — доступ к /docs только для админа (AdminOnly middleware)
DOCS_AUTH_MODE=test
# Тестовая лига для локальной проверки (создание событий без запросов к API)
# Включить — TEST_LEAGUE=true
TEST_LEAGUE=false

# Путь к локальному файлу доп. рынков для тестовой лиги
# Относительно корня приложения (base_path), по умолчанию odds_test.json
TEST_ODDS_FILE=odds_test.json
